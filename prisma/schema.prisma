generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String  @unique
  avatar        String? @default("https://cdn.pfps.gg/pfps/2903-default-blue.png")
  fitnessGoal   String?
  allergies     String[]
  reports       Report[]
}

model Report {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String?
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
}

