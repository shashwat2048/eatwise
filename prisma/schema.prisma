generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   @default("User")
  email         String   @unique
  password      String
  avatar        String?  @default("https://cdn.pfps.gg/pfps/2903-default-blue.png")
  fitnessGoal   String?
  allergies     String[]
}

model Report {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  title     String
  imageUrl  String?
  content   String
}

